<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dong.foodsect.activity.MyCollectDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/my_collect_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mq_ic_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的收藏"
            android:layout_marginRight="@dimen/knowledge_margin_right_fifteen"
            />

    </LinearLayout>

    <include layout="@layout/line_horizontal_long" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_my_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gm" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vp_shop_height_zero"
        android:layout_weight="8" />

</LinearLayout>

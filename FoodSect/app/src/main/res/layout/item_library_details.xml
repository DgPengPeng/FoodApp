<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_thumb_image_url"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name_egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_thumb_image_url"
            android:text="11" />


        <TextView
            android:id="@+id/tv_calory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_egg"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_thumb_image_url"
            android:text="11" />

        <TextView
            android:id="@+id/tv_qianka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_egg"
            android:layout_toRightOf="@id/tv_calory"
            android:layout_marginLeft="5dp"
            android:text="千卡/" />

         <TextView
             android:id="@+id/tv_weight"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="22"
             android:layout_marginLeft="5dp"
             android:layout_toRightOf="@id/tv_qianka"
             android:layout_below="@id/tv_name_egg"/>
        <TextView
            android:id="@+id/tv_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="克"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_weight"
            android:layout_below="@id/tv_name_egg"/>
    </RelativeLayout>
</LinearLayout>
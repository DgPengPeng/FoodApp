<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/first_pop_down_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vp_shop_height_zero"
        android:layout_weight="0.8"
        android:background="@color/gm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_group_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/details_group_zhushi"
            android:textColor="@color/gm_black" />

        <ImageView
            android:id="@+id/iv_group_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/shop_photo_ten"
            android:src="@mipmap/mq_ic_back" />


        <RelativeLayout
            android:id="@+id/rl__library_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_library_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shop_photo_ten"
            android:layout_marginLeft="@dimen/shop_photo_ten"
            android:src="@mipmap/ic_unit_arrow_down" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_library_group"
            android:text="@string/details_group_all" />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/line_horizontal_long"/>
    <RelativeLayout
        android:id="@+id/details_group_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vp_shop_height_zero"
        android:layout_weight="0.7"
        android:background="@color/gm">

        <TextView
            android:id="@+id/tv_library_group_changjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_group_changjian"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
           />

        <ImageView
            android:id="@+id/iv_group_pop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_unit_arrow_down"
            android:layout_toRightOf="@id/tv_library_group_changjian"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/details_group_mragin_left"/>


    </RelativeLayout>

    <!--<ListView-->
        <!--android:id="@+id/library_group_listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="8.5">-->


    <!--</ListView>-->

    <include layout="@layout/line_horizontal_long"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/library_group_listview"
        android:layout_width="match_parent"
        android:background="@color/gm"
        android:layout_height="@dimen/vp_shop_height_zero"
        android:divider="@null"
        android:layout_weight="8.5"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrMode="both"
        />

</LinearLayout>
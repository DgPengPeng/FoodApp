<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/knowledge_padding_ten">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_knowledge_item_title_one"
            android:layout_width="@dimen/iv_knowledge_item_images_one_zero"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/item_delicacy_margin_top_ten"
            android:layout_weight="7" />

        <ImageView
            android:id="@+id/iv_knowledge_item_images_one"
            android:layout_width="@dimen/iv_knowledge_item_images_one_zero"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/iv_knowledge_item_images_one_ten"
            android:layout_marginTop="@dimen/item_delicacy_margin_top_ten"
            android:layout_weight="3"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_knowledge_item_source_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_delicacy_margin_top_ten"
            android:layout_marginLeft="@dimen/tv_knowledge_item_source_one_ten"
            android:textColor="@color/evaluate_small_color"
            android:textSize="@dimen/konwledge_size_ten" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_delicacy_margin_top_ten"
            android:layout_marginLeft="@dimen/knowledge_zan_twenty"
            android:src="@mipmap/ic_watch" />

        <TextView
            android:id="@+id/tv_knowledge_item_tail_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_delicacy_margin_top_ten"
            android:layout_marginLeft="@dimen/tv_knowledge_item_tail_one_five"
            android:textColor="@color/evaluate_small_color"
            android:textSize="@dimen/konwledge_size_ten" />


    </LinearLayout>

</LinearLayout>